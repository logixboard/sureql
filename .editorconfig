# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
charset = utf-8
end_of_line = lf
trim_trailing_whitespace = true
insert_final_newline = true

[*.{ts,js}]
indent_size = 4
indent_style = space

[*.{yaml,json}]
indent_style = space
indent_size = 4
max_line_length = 100

[*.{md,markdown}]
indent_style = space
max_line_length = 100

[Makefile]
tab_width = 4
indent_style = tab
